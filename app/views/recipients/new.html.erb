<h2> Add a new person to the text list </h2>

<%= form_for @recipient do |f| %>
    <div class="form-group">
      <%= f.label :Name %></br>
      <%= f.text_field :name %>
    </div>
    <div class="form-group">
    <%= f.hidden_field :user_id, :value => current_user.id %>
    </div>
    <div class="form-group">
      <%= f.label :phonenumber %>
      <%= f.text_field :phone %>
    </div>
    <div class="form-group">
      <%= f.submit(:class => "btn btn-primary") %>
    </div>
    <% end %>
</div>
