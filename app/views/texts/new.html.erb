<h2> Send a new text!</h2>

<%= form_for @address do |f| %>
     <div class="form-group">
        <%= f.label :To %></br>
        <%= f.collection_select(:address, @addresses, :phone, :name) %>
      </div>
<% end %>

  <%= fields_for @text do |f| %>

    <div class="form-group">
    <%= f.hidden_field :from, :value => '5034054073' %>
    </div>
    <div class="form-group">
      <%= f.label :Text_Message %>
      <%= f.text_field :body %>
    </div>
    <div class="form-group">
      <%= f.submit(:class => "btn btn-primary") %>
    </div>
    <% end %>
</div>
